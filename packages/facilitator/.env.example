# Facilitator Service Configuration

# Server
PORT=3002
NODE_ENV=development

# Blockchain - Ethereum Sepolia
SEPOLIA_RPC_URL=https://eth-sepolia.public.blastapi.io
CHAIN_ID=11155111

# Facilitator Wallet (for settling transactions)
# Generate with: npx tsx scripts/generate-wallet.ts
# Fund with Sepolia ETH from: https://sepoliafaucet.com/
FACILITATOR_PRIVATE_KEY=your_private_key_here

# Payment Configuration
MERCHANT_RECEIVER_ADDRESS=0x_merchant_address
AUTO_SETTLE=true
MIN_CONFIRMATION_BLOCKS=1

# Security
API_RATE_LIMIT=100
MAX_PAYMENT_AMOUNT=10000000000000000
